{
        "version": "2.0.0",
        "windows": {
                "options": {
                        "env": {
                                "EMULATOR_BINARY": "unreal",
                                "COPY_SNAPSHOT_TO": "C:\\GlobalBIN\\UnrealSpeccy\\qsave3.sna"
                        }
                }
        },
        "linux": {
                "options": {
                        "env": {
                                "EMULATOR_BINARY": "xpeccy",
                                "COPY_SNAPSHOT_TO": "/tmp/quicksave.sna"
                        }
                }
        },
        "options": {
                "cwd": "${workspaceFolder}"
        },
        "type": "shell",
        "isBackground": false,
        "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
        },
        "problemMatcher": "$errmatcher-sjasmplus",
        "tasks": [
                {
                        "label": "build all",
                        "command": "make",
                        "group": "build"
                },
                {
                        "label": "part.cubo",
                        "command": "make clean-part.cubo build/part.cubo.bin",
                        "group": {
                                "kind": "build",
                                "isDefault": true
                        }
                }
        ]
}